<%- include("../templates/encabezado") %>

<style>
    section.vh-100 {
        /* Establece la imagen de fondo */
        background-image: url('https://wallpapercrafter.com/desktop/24921-cup-coffee-newspaper-breakfast-4k.jpg'); /* Reemplaza 'ruta_de_tu_imagen.jpg' con la ruta real de tu imagen */
        background-size: cover; /* Ajusta la imagen de fondo para que cubra toda la sección */
        background-position: center; /* Centra la imagen de fondo */
    }
  </style>
  <section class="vh-100">
 
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/login" method="post" class="form-tilted-right"> 
                    <div class="card">
                        <div class="card-header">
                            <h1 class="text-center">Iniciar Sesión</h1>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="usuario">Nombre de usuario</label>
                                <input class="form-control" type="text" id="usuario" name="usuario">
                            </div>
                            <div class="form-group">
                                <label for="password">Contraseña</label>
                                <input class="form-control" type="password" id="password" name="password">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-primary btn-block" type="submit" value="Iniciar sesion">Iniciar Sesión</button>
                        </div>
                    </div>
                </form>
                <div class="card mt-3">
                    <div class="card-header">
                        <h1 class="text-center">Registrarse</h1>
                    </div>
                    <div class="card-body text-center">
                        <p>¿Aún no tienes una cuenta? Regístrate ahora</p>
                        <a href="/nuevousuario" class="btn btn-primary">Registrarse</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="image-container"> 
                    <img src="https://i.pinimg.com/564x/20/0c/79/200c79f1ce78fa0127c3a50ea1d5a7df.jpg" alt="Imagen de fondo" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
    
    <style>
        .form-tilted-right {
            
            margin-left: -50px; /* Ajusta el margen izquierdo para compensar la inclinación */
        }
    
        .image-container {
            overflow: hidden;
        }
    </style>
    
