<%- include("../templates/encabezado")%>
<%- include("../templates/menu")%>

<style>
    section.vh-100 {
        /* Establece la imagen de fondo */
        background-image: url('https://wallpapercrafter.com/desktop/24921-cup-coffee-newspaper-breakfast-4k.jpg'); /* Reemplaza 'ruta_de_tu_imagen.jpg' con la ruta real de tu imagen */
        background-size: cover; /* Ajusta la imagen de fondo para que cubra toda la secci√≥n */
        background-position: center; /* Centra la imagen de fondo */
    }
  </style>
  <section class="vh-100">
    <div class="container mt-5">
        <div class="container">
             <div class="card">
                <div class="card-header">
                    <h1>Usuarios</h1>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                       <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Usuario</th>
                                <th>Password</th>
                                <th>Foto</th>
                                <th>Editar/Borrar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%
                            usuarios.forEach((usuario)=>{                  
                            %>
    
                            <tr>
                                <td><%= usuario.id %></td>
                                <td><%= usuario.nombre %></td>
                                <td><%= usuario.usuario %></td>
                                <td>*******</td>
                                <td><img width="100px" height="100px" src="/images/<%=usuario.archivo %>"></td>
                                <td>
                                    <a href="/editar/<%= usuario.id %>">Editar</a>
                                    <a href="/borrar/<%= usuario.id %>">Borrar</a>
                                </td>                    
                            </tr>
                            <%
                            });
                            %>
    
                    
                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>  
        </div> 
    </div>
</section>
    
<%- include("../templates/pie")%>